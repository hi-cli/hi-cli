source "${HI_CLI_HOME}/bin/colors"
source "${HI_CLI_HOME}/bin/logging"
source "${HI_CLI_HOME}/bin/utils"
###############################################################################

function run() {
    
    module=${arg2}
    
    hiconf="${HI_CLI_HOME}/modules/${module}/hi.conf"
    
    echo "${hiconf}"
    
    if [ -f ${hiconf} ]; then
        cat "${hiconf}"
        echo "TODO: check if property exist"
    fi
    
    echo  "${arg3}" >> "${hiconf}"
    
    result=$?
    
    eval  $1="\${result}"
    eval  $2="\${cli}"
}

